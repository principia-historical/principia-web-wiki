{% macro wikilinks(type, page) %}
	<div class="wikilinks">
		<div class="">
			<a href="/wiki/">Main Page</a>
			&bull; <a href="/wiki/Special:RecentChanges">Recent changes</a>
			&bull; <a href="/wiki/Special:PageIndex">Page Index</a>
		</div>

		{% if type != "special" %}
			<div class="right">
				{% if type != "read" %}<a href="/wiki/{{ page }}">Read</a>{% else %}Read{% endif %}
				&bull; {% if type != "edit" %}<a href="/wiki/{{ page }}?action=edit" rel="nofollow">Edit</a>{% else %}Edit{% endif %}
				&bull; {% if type != "viewhistory" %}<a href="/wiki/{{ page }}?action=history" rel="nofollow">View history</a>{% else %}View history{% endif %}
			</div>
		{% endif %}
	</div>
{% endmacro %}

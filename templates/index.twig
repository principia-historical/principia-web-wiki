{% extends "_layout.twig" %}
{% from 'components/wikilinks.twig' import wikilinks %}

{% set title = pagetitle %}
{% if revision %}
	{% set noindex = true %}
{% endif %}
{% set pagename = '/wiki/' ~ pagetitle_slugified %}

	{% block content %}
<h1>{{ pagetitle }}</h1>

{% if page.content %}
	{% if revision %}
		<p><em>This is an old revision from {{ revdata.time | date('Y-m-d H:m') }} by {{ userlink(revdata, 'u_') }}</em></p>
	{% endif %}

	{{ page.content | markdown_wiki }}
	{#{{ source('flatfile_db/' ~ pagetitle_slugified) | markdown_unsafe }}#}
{% else %}
	<p>This page does not exist. Would you like to create it?</p>
{% endif %}

{{ wikilinks(pagetitle_slugified, "read") }}
	{% endblock %}
